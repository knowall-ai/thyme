# Microsoft Entra ID (Azure AD) Configuration
NEXT_PUBLIC_AZURE_CLIENT_ID=your-entra-app-client-id
AZURE_CLIENT_SECRET=your-entra-app-secret
# Tenant ID is used for both authentication and BC API URL construction
NEXT_PUBLIC_AZURE_TENANT_ID=your-tenant-id
NEXT_PUBLIC_AZURE_REDIRECT_URI=http://localhost:3000

# Business Central Configuration
NEXT_PUBLIC_BC_ENVIRONMENT=sandbox
NEXT_PUBLIC_BC_COMPANY_ID=your-business-central-company-guid
# Base URL without tenant - tenant ID from NEXT_PUBLIC_AZURE_TENANT_ID is added automatically
NEXT_PUBLIC_BC_BASE_URL=https://api.businesscentral.dynamics.com/v2.0

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
